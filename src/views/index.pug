extends ./includes/_layout

//- HEADER
block header
  .container
    h1.title Badges
    p.subtitle Metadata ready to be copy-pasted to README files
    a.down

//- MAIN
block main
  section
    ul.badge-list
      each badge in badges
        li
          img.view-all-badge(src=`images/badges/${badge}`)
          .view-all-copy
            a.inline-copy.markdown(href="#")
            a.inline-copy.imageurl(href="#")
